{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "allowJs": true,
      "checkJs": true,
      "allowSyntheticDefaultImports": true,
      "strict": false,
      "downlevelIteration": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "noEmit": true
    },
      "include": [
        "*.js",
        "scripts/**/*.js",
        "src/**/*.js",
        "test/**/*.js",
        "tools/**/*.js",
      ],
  }
  